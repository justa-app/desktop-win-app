<utils:SingleRunApplication
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WindowsApplication"
			 xmlns:utils="clr-namespace:WindowsApplication.Utilities"
			 xmlns:converters="clr-namespace:WindowsApplication.Converters"
			 xmlns:yesno="clr-namespace:WindowsApplication.Dialogs.YesNo"
			 x:Class="WindowsApplication.App"
             Startup="Application_Startup"
             Exit="Application_Exit"
             ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        <converters:ArrayToIndexConverter x:Key="ArrayToIndex"/>
        <converters:ArrayToLengthConverter x:Key="ArrayToLength"/>
        <converters:ResponseToAlertConverter x:Key="ReponseToAlert"/>
        <converters:InvertedStringToVisibilityConverter x:Key="InvertedStringToVisibility"/>
		<converters:BoolAndToVisibility x:Key="BoolAndVisibility" />
		<Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Roberto" />
        </Style>
		<Style x:Key="ClickableElement"
			   TargetType="FrameworkElement">
			<Style.Triggers>
				<Trigger Property="IsMouseOver"
						 Value="True">
					<Setter Property="Cursor"
							Value="Hand" />
				</Trigger>
			</Style.Triggers>
		</Style>
		<DataTemplate DataType="{x:Type yesno:YesNoDialogViewModel}">
			<yesno:YesNoDialogView/>
		</DataTemplate>
	</Application.Resources>
</utils:SingleRunApplication>
