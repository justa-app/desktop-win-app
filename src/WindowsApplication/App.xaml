<utils:SingleRunApplication
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WindowsApplication"
			 xmlns:utils="clr-namespace:WindowsApplication.Utilities"
             x:Class="WindowsApplication.App"
             Startup="Application_Startup"
             Exit="Application_Exit"
             ShutdownMode="OnLastWindowClose">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Themes/General.xaml" />
				<ResourceDictionary Source="Themes/Drawings.xaml" />
				<ResourceDictionary Source="Themes/SystemControls.xaml" />
				<ResourceDictionary Source="Themes/ChatThemes.xaml" />
				<ResourceDictionary Source="Themes/ChatPageThemes.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</utils:SingleRunApplication>
