<UserControl x:Class="WindowsApplication.Views.Chat.ChatHeader"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:WindowsApplication.Views.Chat"
			 xmlns:views="clr-namespace:WindowsApplication.Views"
			 xmlns:viewschat="clr-namespace:WindowsApplication.Views.Chat"
			 mc:Ignorable="d"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition SharedSizeGroup="Left" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition SharedSizeGroup="Right" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<viewschat:Message Grid.Row="0"
						   Grid.Column="1"
						   MessageText="{Binding Subject}"
						   HorizontalAlignment="Left"
						   MessageBackground="#4B3CA8"
						   TextColor="White"
						   Radius="5,0,5,5"/>
		<views:SeperatorLine Grid.Row="1"
							 Grid.Column="1"
							 Grid.ColumnSpan="2"
							 Margin="0,22,0,0"/>
	</Grid>
</UserControl>
