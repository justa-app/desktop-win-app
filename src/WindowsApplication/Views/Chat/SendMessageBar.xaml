<UserControl x:Class="WindowsApplication.Views.Chat.SendMessageBar"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:WindowsApplication.Views.Chat"
			 mc:Ignorable="d"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<TextBox Grid.Column="0"
				 Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
				 Style="{StaticResource WatermarkSendMessageBox}"
				 x:Name="MessageTextBox">
			<TextBox.InputBindings>
				<KeyBinding Command="{Binding SendMessage}"
							
							Key="Return" />
			</TextBox.InputBindings>
		</TextBox>
		<Path Grid.Column="1"
			  VerticalAlignment="Center"
			  Margin="15,0,0,0"
			  Data="{Binding Data, Source={StaticResource StartArrow}}"
			  Fill="{DynamicResource ControlsColor}"
			  Style="{StaticResource ClickableElement}">
			<Path.InputBindings>
				<MouseBinding Gesture="LeftClick"
							  Command="{Binding SendMessage}" />
			</Path.InputBindings>
		</Path>
	</Grid>
</UserControl>
