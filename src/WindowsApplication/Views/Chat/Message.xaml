<UserControl x:Class="WindowsApplication.Views.Chat.Message"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:WindowsApplication.Views.Chat"
			 mc:Ignorable="d"
			 x:Name="MessageUserControl"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<UserControl.Resources>
		<Style x:Key="MessageBorderStyle"
			   TargetType="Border">
			<Setter Property="Padding"
					Value="14" />
			<Setter Property="ClipToBounds"
					Value="True" />
		</Style>
	</UserControl.Resources>
	<Border Background="{Binding Path=MessageBackground, ElementName=MessageUserControl}"
			CornerRadius="{Binding Path=Radius, ElementName=MessageUserControl}" d:CornerRadius="5"
			Style="{StaticResource MessageBorderStyle}">
		<TextBlock Text="{Binding Path=MessageText, ElementName=MessageUserControl}"
				   Foreground="{Binding Path=TextColor, ElementName=MessageUserControl}"
				   TextWrapping="Wrap"/>
	</Border>
</UserControl>
