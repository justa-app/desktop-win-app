<utils:InvisibleWindow x:Class="WindowsApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsApplication"
		xmlns:utils="clr-namespace:WindowsApplication.Utilities"
		xmlns:vm="clr-namespace:WindowsApplication.ViewModules"
        mc:Ignorable="d"
        Title="MainWindow"
        
		Topmost="True"
        Focusable="False"
        d:Visibility="Visible"
        SizeToContent="WidthAndHeight"    
        x:Name="Main"
        Closing="Window_Closing">
	<Window.Visibility>
		<Binding Path="HasOutlookFocusHandler"
				 Converter="{StaticResource BooleanToVisibility}"
				 ConverterParameter="{x:Static Visibility.Collapsed}"
				 Mode="TwoWay" />
	</Window.Visibility>
	<Image Source="{Binding Path=NewData, Converter={StaticResource ReponseToAlert},Mode=OneWay}"
		   Width="50"
		   Height="50"
		   HorizontalAlignment="Right"
		   PreviewMouseLeftButtonDown="Icon_MouseLeftButtonDown"
		   PreviewMouseMove="Icon_MouseMove"
		   PreviewMouseLeftButtonUp="Icon_MouseLeftButtonUp"
		   x:Name="img"
		   Style="{StaticResource ClickableElement}" />
</utils:InvisibleWindow>
