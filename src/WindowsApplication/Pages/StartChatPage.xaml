<Page x:Class="WindowsApplication.Pages.StartChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsApplication.Pages"
	  xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
	  Background="#4676EB"
	  TextOptions.TextFormattingMode="Display"
      Title="StartChatPage">
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Themes/ChatThemes.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
    <Grid Margin="0,30,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		
		<!-- Header -->
		<Image Source="../Assets/person-icon-expert.png"
			   Stretch="Uniform"
			   Style="{StaticResource ChatHeaderIconStyle}"
			   Grid.Row="0"
			   Grid.Column="0" />
		<TextBlock Text="Start Your Session!"
					   Style="{StaticResource ChatHeaderTextStyle}"
						Grid.Row="0"
					   Grid.Column="1"/>
		<Image Source="../Assets/back-arrow.png"
			   Stretch="Uniform"
			   Style="{StaticResource BackArrowChatStyle}"
			   Grid.Column="2"
			   Grid.Row="0">
			<Image.InputBindings>
				<MouseBinding Gesture="LeftClick"
							  Command="{x:Static NavigationCommands.BrowseBack}" />
			</Image.InputBindings>
		</Image>
		<!-- Page Content -->
		<Rectangle Fill="White"
				   Width="Auto"
				   Height="3"
				   Margin="0,12,0,0"
				   Grid.Row="1"
				   Grid.Column="1"
				   Grid.ColumnSpan="2" />
		<DockPanel Grid.Row="2"
				   Grid.Column="1"
				   LastChildFill="False">
			
			<TextBlock Text="Please type your question!"
					   Style="{StaticResource ChatStartRequestTextStyle}"
					   DockPanel.Dock="Top"/>
			<Border DockPanel.Dock="Top"
					Style="{StaticResource StartChatInputBorder}">
				
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition Height="5" />
							<RowDefinition />
						</Grid.RowDefinitions>
					<TextBox Grid.Row="0"
							 Name="StartChatTextBox"
							 Style="{StaticResource StartChatTextBoxStyle}" />
					<TextBlock Grid.Row="0"
							   Text="Hi, I'm looking for information on..."
							   Style="{StaticResource StartChatHintTextStyle}" />
					<Button DockPanel.Dock="Bottom"
							Grid.Row="3"
							Name="StartChatButton"
							Style="{StaticResource StartChatButtonStyle}">
						<StackPanel Orientation="Horizontal">
							<Image Source="/Assets/start-arrow.png" Height="18" Stretch="Uniform" VerticalAlignment="Center" />
							<TextBlock Text="Start" Style="{StaticResource ChatStartButtonTextStyle}" />
							
						</StackPanel>
						
					</Button>
				</Grid>
					
			</Border>
			<Image gif:AnimationBehavior.RepeatBehavior="3x"
				   gif:AnimationBehavior.SourceUri="/Assets/bubble-chat.gif"
				   gif:AnimationBehavior.AutoStart="True"
				   Margin="0,2,0,10"
				   Height="153"
				   Stretch="Uniform"
				   DockPanel.Dock="Bottom"/>
		</DockPanel>
	</Grid>
</Page>
