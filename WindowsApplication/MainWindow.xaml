<Window x:Class="WindowsApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsApplication"
        mc:Ignorable="d"
        Title="MainWindow"
        Topmost="True"
        Focusable="False"
        d:Visibility="Visible"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"    
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Window.Visibility>
        <Binding Path="HasOutlookFocusHandler" Converter="{StaticResource BooleanToVisibility}" Mode="TwoWay"/>
    </Window.Visibility>

    <StackPanel PreviewMouseMove="Window_MouseMove">
        <Image Source="Assets/JustaSleep.png" Width="50" Height="50" HorizontalAlignment="Left"/>
        <Image Source="Assets/JustaSleep.png" Width="50" Height="50" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
